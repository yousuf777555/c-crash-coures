#include<stdio.h>
int main()
{
	int a,b;
	printf("enter the number");
	scanf("%d%d",&a,&b);
	printf("set %d\n",a|(0x1<<b));
	 printf("clear %d\n",a&(~(0x1<<b)));
	  printf("toggle %d\n",a^((0x1<<b)));
	  if(a&(0x1<<b))
	  {
		  printf("bit is ON");
	  }
	  else
	  {
		  printf("bit is OFF");
	  }

			}
