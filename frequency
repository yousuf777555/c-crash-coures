#include<stdio.h>
#include<stdlib.h>
#define N  20
void fun(char *a,char c);
int main()
{
        char a[N],c;
 //       int count=0;
        printf("enter the string\n");
        scanf("%s",a);
	void (*adi)(char *,char);
	adi=fun;
	adi(a,c);
}
void fun(char *a,char c)
{
	int count=0;
        for(c='a';c<='z';c++)
        {
                count=0;
                for(int i=0;a[i]!='\0';i++)
                {
                        if(c==a[i])
                        count++;
                }
                if(count>0)
                        printf("%c found in %d times\n",c,count);
        }
}



